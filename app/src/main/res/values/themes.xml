<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/visbyroundcf_medium</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/checkout_back</item>
    </style>
    <style name="AppTheme.NoActionBar.Banner">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar.Home">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Activities">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">
        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">13sp</item>
        <!-- Background color when SELECTED -->

        <!-- <item name="colorControlHighlight">@color/buttonclor</item>-->
    </style>

    <style name="my_style">
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="Visbyroundcf_heavy" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/visbyroundcf_heavy</item>
        <item name="android:fontFamily">@font/visbyroundcf_heavy</item>
    </style>


    <style name="Visbyroundcf_extrabold" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/visbyroundcf_extrabold</item>
        <item name="android:fontFamily">@font/visbyroundcf_extrabold</item>
    </style>

    <style name="Visbyroundcf_bold" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/visbyroundcf_bold</item>
        <item name="android:fontFamily">@font/visbyroundcf_bold</item>
    </style>


    <style name="Visbyroundcf_light" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/visbyroundcf_light</item>
        <item name="android:fontFamily">@font/visbyroundcf_light</item>
    </style>


    <style name="Visbyroundcf_demibold" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/visbyroundcf_demibold</item>
        <item name="android:fontFamily">@font/visbyroundcf_demibold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="Visbyroundcf_regular" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/visbyroundcf_regular</item>
        <item name="android:fontFamily">@font/visbyroundcf_regular</item>
    </style>

    <style name="Visbyroundcf_medium" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/visbyroundcf_medium</item>
        <item name="android:fontFamily">@font/visbyroundcf_medium</item>
    </style>


    <style name="CustomFontTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/TextInputLayoutHintText</item>
        <item name="helperTextTextAppearance">@style/TextInputLayoutHelperText</item>
        <item name="errorTextAppearance">@style/TextInputLayoutErrorText</item>
    </style>

    <style name="TextInputLayoutHintText" parent="TextAppearance.Design.Hint">
        <item name="android:fontFamily">@font/visbyroundcf_extrabold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">#3D3D3D</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayoutHelperText" parent="TextAppearance.Design.HelperText">
        <item name="android:fontFamily">@font/visbyroundcf_light</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">#818181</item>
    </style>

    <style name="TextInputLayoutErrorText" parent="TextAppearance.Design.Error">
        <item name="android:fontFamily">@font/visbyroundcf_light</item>
        <item name="android:textColor">#FD0101</item>

    </style>

    <style name="hintlogin" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">#3D3D3D</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/heebo_bold</item>

    </style>

    <style name="Textappierpass" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#AEAEAE</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:fontFamily">@font/visbyroundcf_extrabold</item>
    </style>

    <style name="normal" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_12ssp</item>

        <item name="android:fontFamily">@font/visbyroundcf_light</item>
    </style>

    <style name="Bottom_nav_style">
        <item name="fontFamily">@font/metro_reg</item>
        <item name="android:textSize">12sp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/visbyroundcf_extrabold</item>
    </style>
    <style name="Select_item">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="UnSelect_item">
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>